body {
    font-family: "Helvetica Neue", "Arial Nova", sans-serif;
    font-size: 16px;
    line-height: 1.25;

    color-scheme: light dark;
    color: CanvasText;
    background-color: Canvas;
}

body > header {
    border-bottom: 1px dotted CanvasText;
    padding-top: 1rem;
    padding-bottom: 0.5rem;

    & .logo {
        font-size: 2em;
        font-weight: 200;
    }
    & menu {
        display: flex;
        gap: 1em;
        margin: 0;
        padding: 0;

        & li {
            display: block;

            & a {
                display: block;
            }
        }
    }
}

@media (max-width: 36em) {
    pre  {
        width: 100%;
        overflow: auto;
    }
}

@media (min-width: 36em) {
    body {
        display: grid;
        grid-template-columns: minmax(max-content, 1fr) 12em minmax(24em, 36em) minmax(1rem, 1fr);
    }
    body > header {
        grid-column: 1 / span 4;
        display: grid;
        grid-template-columns: subgrid;
        align-items: baseline;
    }
}

.text {
    font-family: "Palatino Linotype", "Palatino", "Palladio", "URW Palladio L", "Book Antiqua", serif;
    line-height: 1.5;

    & p, & pre {
        margin-top: 1.5em;
        margin-bottom: 1.5em;
    }

    & pre {
        margin-left: 2em;
        line-height: 1.25;

        & > code {
            display: block;
        }
    }

    & blockquote {
        margin-left: 2em;
        line-height: 1.25;
    }

    & h2, & h3 {
        font-family: "Helvetica Neue", "Arial", "Helvetica", sans-serif;
    }

    & h2 {
        font-size: 1.25em;
        font-weight: 600;
        margin: 2em 0 1em;
    }
 }

 code {
    font-family:  "Verdana", "DejaVu Sans", "Vera Sans", sans-serif;
    font-size-adjust: 0.469;  /* x height of Palatino. */
 }
